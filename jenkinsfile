pipeline {
    agent {
        label 'masternodes'
    }
    stages {
        stage('Checkout') {
            steps {
                checkout scmGit(
                    branches: [[name: 'refs/heads/main']],
                    extensions: [],
                    userRemoteConfigs: [[url: 'https://github.com/premashish-ds/AnsibleRepo.git']]
                )
            }
        }
        stage('Ansible Playbook Execution') {
            steps {
                sh 'ansible-playbook $WORKSPACE/postgres_backup_restore.yml'
            }
        }
    }
}
